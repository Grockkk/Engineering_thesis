<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="@color/app_background_color"

    tools:context=".InsideStepsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/chartLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="415dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chartLayout">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Weekly steps data"
                android:textAlignment="center"
                android:textColor="@color/app_text_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_TotalSteps"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="4sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:hint="totalSteps"
                        android:padding="4sp"
                        android:textColor="@color/app_background_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Total"
                        android:textColor="@color/app_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_weeklyMAXSteps"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="4sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:hint="max steps"
                        android:textColor="@color/app_background_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Max"
                        android:textColor="@color/app_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_weeklyMINSteps"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="4sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:hint="min steps"
                        android:textColor="@color/app_background_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Min"
                        android:textColor="@color/app_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Weekly distance data"
                android:textAlignment="center"
                android:textColor="@color/app_text_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_TotalDistance"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="4sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:hint="totalDistance"
                        android:padding="4sp"
                        android:textColor="@color/app_background_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Total"
                        android:textColor="@color/app_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_weeklyMAXDistance"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="4sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:hint="max distance"
                        android:textColor="@color/app_background_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Max"
                        android:textColor="@color/app_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_weeklyMINDistance"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="4sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:hint="min distance"
                        android:textColor="@color/app_background_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Min"
                        android:textColor="@color/app_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Weekly calories burned data"
                android:textAlignment="center"
                android:textColor="@color/app_text_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_TotalCalories"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="4sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:hint="totalCalories"
                        android:padding="4sp"
                        android:textColor="@color/app_background_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Total"
                        android:textColor="@color/app_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_weeklyMAXCalories"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="4sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:hint="max calories"
                        android:textColor="@color/app_background_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Max"
                        android:textColor="@color/app_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ID_weeklyMINCalories"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="4sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:hint="min calories"
                        android:textColor="@color/app_background_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Min"
                        android:textColor="@color/app_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
