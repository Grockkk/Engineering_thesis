<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    tools:context=".CreatorsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/background"
                android:padding="10sp"
                android:text="Below are the icons and their authors. \nFor more, click on the icon"
                android:textAlignment="center"
                android:textColor="@color/app_text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="Freepik "
                android:textColor="@color/app_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ID_Freepik_caloriesBurned"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:padding="10sp"
                        app:srcCompat="@drawable/calories" />

                    <ImageView
                        android:id="@+id/ID_Freepik_sleepMoon"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:padding="10sp"
                        app:srcCompat="@drawable/sleeping" />

                    <ImageView
                        android:id="@+id/ID_Freepik_cardiogram"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        app:srcCompat="@drawable/cardiogram"
                        android:padding="10sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="Bert Flint"
                android:textColor="@color/app_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ID_BertFlint_heartRate"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:padding="10sp"
                        app:srcCompat="@drawable/heart_rate" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@color/app_background_color"
                        android:padding="10sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@color/app_background_color"
                        android:padding="10sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="monkik"
                android:textColor="@color/app_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ID_monkik_credits"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:padding="10sp"
                        app:srcCompat="@drawable/writer" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@color/app_background_color"
                        android:padding="10sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@color/app_background_color"
                        android:padding="10sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="Icongeek26"
                android:textColor="@color/app_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ID_Icongeek26_steps"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:padding="10sp"
                        app:srcCompat="@drawable/footprints" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@color/app_background_color"
                        android:padding="10sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@color/app_background_color"
                        android:padding="10sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="Those Icons "
                android:textColor="@color/app_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ID_ThoseIcons_Distance"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/add_data_dark_background_for_activities"
                        android:padding="10sp"
                        app:srcCompat="@drawable/distance" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@color/app_background_color"
                        android:padding="10sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@color/app_background_color"
                        android:padding="10sp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/page_change_circle_empty" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/app_text_color"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                    app:layout_constraintEnd_toEndOf="@+id/imageView7"
                    app:layout_constraintStart_toStartOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="@+id/imageView7"
                    tools:textStyle="bold" />

                <ImageView
                    android:id="@+id/ID_CreditsButton"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="160dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/page_change_circle_full" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/app_background_color"
                    app:layout_constraintBottom_toBottomOf="@+id/ID_CreditsButton"
                    app:layout_constraintEnd_toEndOf="@+id/ID_CreditsButton"
                    app:layout_constraintStart_toStartOf="@+id/ID_CreditsButton"
                    app:layout_constraintTop_toTopOf="@+id/ID_CreditsButton"
                    tools:textStyle="bold" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>